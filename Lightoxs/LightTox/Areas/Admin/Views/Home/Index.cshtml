
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="description">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="review-content-section">
                                        <div id="dropzone1" class="pro-ad">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="tinymce-single responsive-mg-b-30">
                                                        <div class="alert-title">
                                                            <div class="form-group">
                                                                <input name="firstname" type="text" class="form-control" placeholder="Title ...">
                                                            </div>
                                                            <div class="form-group">
                                                                <select name="country" class="form-control">
                                                                    <option value="none" selected="" disabled="">Chọn loại tin tức</option>
                                                                    <option value="1">Events & Workshop</option>
                                                                    <option value="2">Ấn phẩm khoa học</option>
                                                                    <option value="3">Chăm sóc sắc đẹp</option>
                                                                    <option value="4">Câu hỏi thường gặp</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div id="summernote">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="payment-adress">
                                                        <button id="submitTest" class="btn btn-primary waves-effect waves-light">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- tinymce Start-->
<div class="tinymce-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            </div>
        </div>
    </div>
</div>
<!-- tinymce End-->
<script>
    var TeamDetailPostBackURL = '/Admin/Home/SaveNewPost';
    $(function () {
        $("#submitTest").click(function () {
            var $buttonClicked = $(this);
            $.ajax({
                type: "POST",
                url: TeamDetailPostBackURL,
                contentType: "application/json; charset=utf-8",
                data: { "contentPost": $('#summernote').summernote('code') },
                datatype: "json",
                success: function (data) {
                },
                error: function () {
                    alert("Error: Get content of this Post failed. Please try again!");
                }
            });
        });
    });
</script>